<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.tignioj.countdowninfo.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.tignioj.countdowninfo.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second"/>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.tignioj.countdowninfo.SettingFragment"
        android:label="@string/fragment_setting_label"
        tools:layout="@layout/fragment_setting" />
    <activity
        android:id="@+id/mainActivity2"
        android:name="com.tignioj.countdowninfo.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>